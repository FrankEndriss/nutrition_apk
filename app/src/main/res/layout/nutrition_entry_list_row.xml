<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nleTs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dip"
            android:text="09:00"
            android:textSize="16dip"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/nleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:paddingLeft="10dip"
            android:text="Lebensmittel Name"
            android:textSize="16dip"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nleAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dip"
            android:text="124 gr"
            android:textSize="16dip"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/nleKcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dip"
            android:text="178 kCal"
            android:textSize="16dip"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/nleFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dip"
            android:text="27,3 gr"
            android:textSize="16dip"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/nleCarbo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dip"
            android:text="68,5 gr"
            android:textSize="16dip"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/nleProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dip"
            android:text="16,2 gr"
            android:textSize="16dip"
            android:textStyle="bold"></TextView>
    </LinearLayout>
</LinearLayout>
