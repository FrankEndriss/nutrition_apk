<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:rowCount="2"
    android:columnCount="5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/nleTs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:paddingTop="5dip"
        android:textSize="16dip"
        android:textStyle="bold"
        android:text="09:00"
        >
    </TextView>

    <TextView
        android:id="@+id/nleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:paddingLeft="10dip"
        android:textSize="16dip"
        android:textStyle="bold"
        android:text="Lebensmittel Name"
        >
    </TextView>

        <TextView
            android:id="@+id/nleAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:paddingTop="5dip"
            android:textSize="16dip"
            android:textStyle="bold"
            android:text="124 gr" >
        </TextView>

        <TextView
            android:id="@+id/nleKcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:paddingLeft="10dip"
            android:textSize="16dip"
            android:textStyle="bold"
            android:text="178 kCal" >
        </TextView>

    <TextView
        android:id="@+id/nleFat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:paddingLeft="10dip"
        android:textSize="16dip"
        android:textStyle="bold"
        android:text="27,3 gr" >
    </TextView>

    <TextView
        android:id="@+id/nleCarbo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="3"
        android:paddingLeft="10dip"
        android:textSize="16dip"
        android:textStyle="bold"
        android:text="68,5 gr" >
    </TextView>

    <TextView
        android:id="@+id/nleProtein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="4"
        android:paddingLeft="10dip"
        android:textSize="16dip"
        android:textStyle="bold"
        android:text="16,2 gr" >
    </TextView>
</GridLayout>
